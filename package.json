{
  "name": "websim",
  "version": "0.1.0",
  "source": "src/index.html",
  "author": "Ricardo JL Rufino <ricardo.jl.rufino@gmail.com>",
  "repository": "https://github.com/ricardojlrufino",
  "license": "MIT",
  "description": "Arduino (8-bit AVR) simulator, written in JavaScript and runs in the browser",
  "keywords": [
    "Arduino",
    "AVR",
    "simulation",
    "simulator",
    "ATmega328p",
    "microcontroller"
  ],
  "pwaManifest": {
    "short_name": "WebSIM",
    "name": "WebSIM - Arduino Simulator",
    "description": "WebSIM Arduino Web Simulator Board",
    "startURL": "/?source=pwa",
    "theme": "#add8e6",
    "generateIconOptions": {
      "baseIcon": "./public/img/favico.svg",
      "sizes": [
        192,
        384,
        512
      ],
      "genFavicons": true
    }
  },
  "scripts": {
    "build:old": "rimraf dist && tsc --sourceMap false && tsc -m commonjs --outDir dist/cjs --sourceMap false",
    "build": "parcel build src/index.html",
    "prepare": "husky install && npm run build",
    "start": "parcel src/index.html",
    "lint": "eslint src/**/*.ts",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@parcel/packager-raw-url": "2.4.1",
    "@parcel/packager-xml": "2.4.1",
    "@types/jest": "^26.0.4",
    "@types/node": "^12.12.50",
    "@types/prettier": "^2.3.2",
    "@types/react": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@wokwi/elements": "^0.57.2",
    "acorn": "^7.3.1",
    "buffer": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^6.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^9.5.0",
    "parcel": "^2.4.1",
    "parcel-config-pwa-manifest": "^0.1.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "dependencies": {
    "avr8js": ">= 0.18.10"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
